<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0099CC">
	<RelativeLayout
		android:id="@+id/layout_main"
		android:background="#FF384248"
		android:layout_width="match_parent"
		android:layout_height="200dp">
		<TextView
			android:textSize="22sp"
			android:textColor="#FFEEEEEE"
			android:id="@+id/hit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="10dp"
			android:text="Enter your PIN">
		</TextView>
		<RelativeLayout
			android:id="@+id/layout_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_below="@id/hit_text">
			<RelativeLayout
				android:id="@+id/t1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp">
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t11"
					android:layout_width="55dp"
					android:layout_height="55dp">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t12"
					android:background="@drawable/pin_selector"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:layout_below="@id/t11">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t13"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:layout_below="@id/t12">
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/t2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/t1">
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t21"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="9">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t22"
					android:background="@drawable/pin_selector"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="一"
					android:layout_below="@id/t21">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t23"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="1"
					android:layout_below="@id/t22">
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/t3"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/t2">
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t31"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="9">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t32"
					android:background="@drawable/pin_selector"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="一"
					android:layout_below="@id/t31">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FF777777"
					android:gravity="center"
					android:id="@+id/t33"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="1"
					android:layout_below="@id/t32">
				</TextView>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/t4"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/t3">
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t41"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="9">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t42"
					android:focusable="true"
					android:background="@drawable/pin_selector"
					android:focusableInTouchMode="true"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="一"
					android:layout_below="@id/t41">
				</TextView>
				<TextView
					android:textSize="30sp"
					android:textColor="#FFEEEEEE"
					android:gravity="center"
					android:id="@+id/t43"
					android:visibility="invisible"
					android:layout_width="55dp"
					android:layout_height="55dp"
					android:text="1"
					android:layout_below="@id/t42">
				</TextView>
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/layout_nums"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginLeft="10sp"
		android:layout_marginTop="30sp"
		android:layout_below="@id/layout_main">
		<Button
			android:id="@+id/num1"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="1">
		</Button>
		<Button
			android:id="@+id/num2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="2"
			android:layout_toRightOf="@id/num1">
		</Button>
		<Button
			android:id="@+id/num3"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="3"
			android:layout_toRightOf="@id/num2">
		</Button>
		<Button
			android:id="@+id/num4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="4"
			android:layout_below="@id/num1">
		</Button>
		<Button
			android:id="@+id/num5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="5"
			android:layout_toRightOf="@+id/num4"
			android:layout_below="@id/num2">
		</Button>
		<Button
			android:id="@+id/num6"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="6"
			android:layout_toRightOf="@id/num5"
			android:layout_below="@id/num3">
		</Button>
		<Button
			android:id="@+id/num7"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="7"
			android:layout_below="@+id/num4">
		</Button>
		<Button
			android:id="@+id/num8"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="8"
			android:layout_toRightOf="@id/num7"
			android:layout_below="@+id/num5">
		</Button>
		<Button
			android:id="@+id/num9"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="9"
			android:layout_toRightOf="@id/num8"
			android:layout_below="@id/num6">
		</Button>
		<Button
			android:id="@+id/num10"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="*"
			android:layout_below="@id/num7">
		</Button>
		<Button
			android:id="@+id/num0"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="0"
			android:layout_toRightOf="@id/num10"
			android:layout_below="@id/num8">
		</Button>
		<Button
			android:id="@+id/num11"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="#"
			android:layout_toRightOf="@id/num0"
			android:layout_below="@id/num9">
		</Button>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/layout_control"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="30sp"
		android:layout_toRightOf="@id/layout_nums"
		android:layout_below="@id/layout_main">
		<Button
			android:textSize="14sp"
			android:id="@+id/up"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:layout_marginTop="15dp"
			android:text="Up"
			android:layout_centerHorizontal="true">
		</Button>
		<Button
			android:textSize="15sp"
			android:id="@+id/enter"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:layout_marginTop="55dp"
			android:text="Enter"
			android:layout_centerHorizontal="true">
		</Button>
		<Button
			android:textSize="14sp"
			android:id="@+id/down"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:text="Down"
			android:layout_below="@id/enter"
			android:layout_centerHorizontal="true">
		</Button>
		<Button
			android:textSize="15sp"
			android:id="@+id/left"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:layout_marginTop="55dp"
			android:text="Left"
			android:layout_toLeftOf="@id/enter">
		</Button>
		<Button
			android:textSize="15sp"
			android:id="@+id/right"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:layout_marginTop="55dp"
			android:text="Right"
			android:layout_toRightOf="@id/enter">
		</Button>
	</RelativeLayout>
</RelativeLayout>